#!/usr/bin/env bash

DOCKER_UID=$(id -u)
DOCKER_GID=$(id -g)
EDXAPP_IMAGE_TAG="${EDX_RELEASE:-dogwood.3}-${FLAVOR:-fun}"
FLAVORED_EDX_RELEASE_PATH="releases/$(echo ${EDX_RELEASE:-dogwood.3} | sed -E "s|\.|/|")/${FLAVOR:-bare}"

export DOCKER_UID
export DOCKER_GID
export EDXAPP_IMAGE_TAG
export FLAVORED_EDX_RELEASE_PATH

docker-compose "${@}"
